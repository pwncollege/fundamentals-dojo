#!/usr/bin/exec-suid -- /bin/python3 -I

import sys


print("Enter the password:")
entered_password = sys.stdin.buffer.read1()
correct_password = "ğŸ‹ ğŸ‰‘ ğŸ’­ ğŸ’¯".encode("utf-8")

print(f"Read {len(entered_password)} bytes.")


